@model UserModel
@{
    Layout = "_Layout";
}

<form method="post">
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;">
                        <div class="card-body p-5">

                            <h3 class="mb-5 text-center">Giriş Yap</h3>

                            <div class="form-outline mb-4">
                                <label class="form-label" for="typeEmailX-2">Kullanıcı Adı</label>
                                <input type="text" asp-for="@Model.UserName" id="typeEmailX-2" class="form-control form-control-lg" />
                            </div>

                            <div class="form-outline mb-4">
                                <label class="form-label" for="typePasswordX-2">Şifre</label>
                                <input type="password" asp-for="@Model.Password" id="typePasswordX-2" class="form-control form-control-lg" />
                            </div>

                            <button class="btn btn-primary btn-lg btn-block" type="submit">Giriş Yap</button>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>